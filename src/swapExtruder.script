///////////////////////////////////////////////////////////////////////////////
/// @fn luxSwapEx 1
/// @brief Swaps between T0 and T1
///////////////////////////////////////////////////////////////////////////////
if(Tool==0)
{
  diagPrompt.tMessage.txt="Switch to Extruder 2?"
  ReturnVal=1
}else
{
  diagPrompt.tMessage.txt="Switch to Extruder 1?"
  ReturnVal=0
}
ReturnObj=!!
page diagPrompt

///////////////////////////////////////////////////////////////////////////////
/// @fn luxSwapEx 0
/// @brief Swaps between T0 and T1
///////////////////////////////////////////////////////////////////////////////
if(ReturnVal!=-1)
{
  commands.queue.txt+="T"
  covx ReturnVal,vars.s.txt,0,0
  commands.queue.txt+=vars.s.txt
  commands.queue.txt+="\r"
  commands.queue.txt+="M114\r"
  click luxSend,0
}

///////////////////////////////////////////////////////////////////////////////
/// @fn luxView,1
/// @brief Updates states for controls
///////////////////////////////////////////////////////////////////////////////
bSwap.picc=bSwap.picc2+1
bSwap.picc+=Tool