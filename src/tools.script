///////////////////////////////////////////////////////////////////////////////
/// @fn bMotors
/// @brief Stop print and unlock motors
///////////////////////////////////////////////////////////////////////////////
click luxStopPrint,0
commands.command.txt="M84\r" //Disable steppers
click luxSend,1

///////////////////////////////////////////////////////////////////////////////
/// @fn bHeaters
/// @brief Turn off all heaters
///////////////////////////////////////////////////////////////////////////////
click luxStopPrint,0
commands.command.txt="M104 T0 S0\rM104 T1 S0\rM140 S0\rM105\r"
click luxSend,1

///////////////////////////////////////////////////////////////////////////////
/// @fn bPowerOff
/// @brief Shut down the printer.  USB must be unplugged to completely power off
///////////////////////////////////////////////////////////////////////////////
bPowerOff.picc=bPowerOff.picc2
commands.command.txt="M112"
click luxSend,1
page shutdown

///////////////////////////////////////////////////////////////////////////////
/// @fn luxPageAnimate 1
/// @brief Animations specific to this page
///////////////////////////////////////////////////////////////////////////////
bClose.aph=127
bNavDots.aph=127
bPgNext.aph=127

///////////////////////////////////////////////////////////////////////////////
/// @fn luxPageAnimate 0
/// @brief Animations specific to this page
///////////////////////////////////////////////////////////////////////////////
bClose.aph=0
bNavDots.aph=0
bPgNext.aph=0

///////////////////////////////////////////////////////////////////////////////
/// @fn luxView,1
/// @brief Updates states for controls
///////////////////////////////////////////////////////////////////////////////
if(PreviousPage==MAIN)
{
  tools.effect=0
}